name = raw_input("Enter file:")
if len(name) < 1 : name = "mbox-short.txt"
handle = open(name)

counts = dict()

for line in handle:
    if not line.startswith("From"): continue
    line = line.split()
    if len(line) < 5 : continue
    word = line[5][:2]
    counts[word] = counts.get(word, 0) + 1
    

for key, val in sorted(counts.items()):
    print key, val
    
